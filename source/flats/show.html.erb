<!-- source/flats/show.html.erb -->

<!-- Access data.flats with owner's name as key -->
<% flat = data.flats[owner] %>

<!-- Inject flat data in template -->
<div class="cover-banner" style='background-image: linear-gradient(-225deg, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0.3) 50%), url(<%= image_path "https://kitt.lewagon.com/placeholder/cities/#{flat.city_slug}" %>);'>
</div>

<div class="dark-blue-wrapper">
  <div class="key-info">
    <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{owner}", class: "img-circle avatar" %>
    <div class="facts">
      <h4><%= flat.description %></h4>
      <p><%= flat.city_name %></p>
      <div class="rating">
        <%= "â˜†" * flat.rating %>
      </div>
    </div>
  </div>
  <div class="form-box">
    <form action="#">
      <h3>Book this flat</h3>
      <div class="form-inline">
        <div class="form-group">
          <input type="text" class="form-control" id="checkin" placeholder="checkin">
        </div>
        <div class="form-group">
          <input type="text" class="form-control" id="checkout" placeholder="checkout">
        </div>
      </div><br>
      <div class="form-group">
        <select name="guests" class="form-control">
          <option value="1">1 guest</option>
          <option value="2">2 guests</option>
          <option value="3">3 guests</option>
        </select>
      </div>
      <input type="submit" value="Book it" class="btn btn-primary long-button">
    </form>
  </div>
</div>

<div class="orange-wrapper">
  <div class="about-flat">
    <h4>About this flat</h4>
    <p><%= flat.full_description %></p>
  </div>
  <div class="info">
    <p>The space</p>
    <ul>
      <li>Accommodates: <%= flat.guests %></li>
      <li>Bathrooms: <%= flat.bathrooms %></li>
      <li>Bedrooms: <%= flat.bedrooms %></li>
    </ul>
  </div>
  <div class="info">
    <p>Amenities</p>
    <ul>
      <% if flat.kitchen %>
        <li><i class="fa fa-cutlery" aria-hidden="true"></i> Kitchen</li>
      <% end %>
      <% if flat.wifi %>
        <li><i class="fa fa-wifi" aria-hidden="true"></i> Wifi</li>
      <% end %>
      <% if flat.tv %>
        <li><i class="fa fa-desktop" aria-hidden="true"></i> TV</li>
      <% end %>
    </ul>
  </div>
</div>

